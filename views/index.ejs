<!DOCTYPE html>
<html lang="en">

<head>
  <%-include('./templates/header.ejs')%>
        
</head>

<body>
    <div class="container p-4">
        <div class="row">
            <% data.forEach(function (shoe) { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <%= shoe.marca%> / <%= shoe.modelo%>
                        </div>
                        <img src="<%= shoe.imagen%>" class="card-img-top">
                        <div class="card-body">
                            <p>
                                <%= shoe.precio %>
                            </p>
                        </div>
                        <div class="card footer">
                            <a href=">" class="btn btn-danger">
                                BORRAR
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

</body>

</html>