<!DOCTYPE html>
<html lang="en">

<head>
  <%-include('./templates/header.ejs')%>
</head>

<body>
  <%-include('./templates/navagation.ejs')%>
    <form id="productForm" action="" onsubmit="return false;">
      <div class="container p-4">
        <div class="row">
          <% data.forEach(function (shoe) { %>
            <div class="col-md-4">
              <div class="card">
                <div class="card-header">
                  <%= shoe.Brand%> / <%= shoe.Model%>
                </div>
                <img src="<%= shoe.Image%>" class="card-img-top">
                <div class="card-body">
                  <p>
                    <%= shoe.Price %>
                  </p>
                </div>
                <div class="card footer">
                  <!-- Checkbox -->
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="comprarCheckbox-<%= shoe.id %>"
                      data-target="cantidadesDiv-<%= shoe.id %>" name="selectedProducts" value="<%= shoe.id %>">
                    <label class="form-check-label" for="comprarCheckbox-<%= shoe.id %>">Comprar</label>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
              <!-- Enlace para abrir el modal -->
              <a href="" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                Confirmar Comprar
              </a>

              <!-- Modal -->
              <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="staticBackdropLabel">CONFIRMA TU COMPRA</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      ¿Estás seguro de guardar esta venta?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                      <button type="submit" form="productForm" class="btn btn-primary">Guardar</button>
                    </div>
                  </div>
                </div>
              </div>

    </form>


    <footer>
      <%-include('./templates/footer.ejs')%>
    </footer>

    
</body>

</html>